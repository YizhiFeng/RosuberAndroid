<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:text="Passenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passenger_detail_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:layout_marginTop="11dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Phone:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passenger_detail_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/passenger_detail_phoneTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passenger_phone_input_text_view"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/passenger_detail_phoneTitle"
        android:layout_alignBottom="@+id/passenger_detail_phoneTitle"
        android:layout_toRightOf="@+id/passenger_detail_phoneTitle"
        android:layout_toEndOf="@+id/passenger_detail_phoneTitle"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp" />

    <TextView
        android:text="Email:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passenger_detail_phoneTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/passenger_detail_emailTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passenger_email_input_text_view"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/passenger_detail_emailTitle"
        android:layout_alignBottom="@+id/passenger_detail_emailTitle"
        android:layout_toRightOf="@+id/passenger_detail_emailTitle"
        android:layout_toEndOf="@+id/passenger_detail_emailTitle"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp" />

    <ImageButton
        app:srcCompat="@drawable/ic_message_black_24dp"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/passenger_phone_button"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:layout_height="23dp"
        android:layout_width="23dp"
        android:layout_alignTop="@+id/passenger_phone_input_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="23dp"
        android:layout_height="23dp"
        app:srcCompat="@drawable/ic_email_black_24dp"
        android:id="@+id/passenger_email_button"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:layout_alignBottom="@+id/driver_email_input_text_view"
        android:layout_alignLeft="@+id/passenger_phone_button"
        android:layout_alignStart="@+id/passenger_phone_button" />

</RelativeLayout>