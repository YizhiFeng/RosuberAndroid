    <ImageButton
        android:id="@+id/profileImageButton"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:elevation="0dp"
        android:background="@android:color/transparent"
        android:cropToPadding="false"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <TextView
        android:text="ToBeFilledName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/name_input_text_view"
        android:layout_alignBottom="@+id/name_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="ToBeFilledPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/phone_input_text_view"
        android:layout_alignTop="@+id/phone_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/email_input_text_view"
        android:text="ToBeFilledEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignTop="@+id/email_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_text_view"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/name_text_view"
        android:layout_alignEnd="@+id/name_text_view"
        android:textSize="16sp" />

    <TextView
        android:text="Phone Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone_text_view"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/email_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16sp" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_text_view"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/phone_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16sp" />

    <ImageButton
        app:srcCompat="@drawable/ic_edit_black_48dp"
        android:id="@+id/editImageButton"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/name_input_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp" />


</RelativeLayout>