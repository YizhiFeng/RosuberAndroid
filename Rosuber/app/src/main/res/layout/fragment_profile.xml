<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="Nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:id="@+id/nickname_text_view"
        android:layout_below="@+id/profileImageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:text="ToBeFilledNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/nickname_text_view"
        android:layout_alignLeft="@+id/nickname_text_view"
        android:layout_alignStart="@+id/nickname_text_view"
        android:id="@+id/nickname_input_text_view"
        android:textSize="16sp" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/name_text_view"
        android:layout_below="@+id/nickname_input_text_view"
        android:layout_alignLeft="@+id/nickname_input_text_view"
        android:layout_alignStart="@+id/nickname_input_text_view"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:text="ToBeFilledName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:id="@+id/name_input_text_view"
        android:layout_below="@+id/name_text_view"
        android:layout_alignLeft="@+id/name_text_view"
        android:layout_alignStart="@+id/name_text_view"/>

    <TextView
        android:text="Phone Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/phone_text_view"
        android:layout_below="@+id/name_input_text_view"
        android:layout_alignLeft="@+id/name_input_text_view"
        android:layout_alignStart="@+id/name_input_text_view"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:text="ToBeFilledPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:id="@+id/phone_input_text_view"
        android:layout_below="@+id/phone_text_view"
        android:layout_alignLeft="@+id/phone_text_view"
        android:layout_alignStart="@+id/phone_text_view"/>

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_input_text_view"
        android:layout_alignLeft="@+id/phone_input_text_view"
        android:layout_alignStart="@+id/phone_input_text_view"
        android:layout_marginTop="15dp"
        android:id="@+id/email_text_view"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/email_input_text_view"
        android:text="ToBeFilledEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/email_text_view"
        android:layout_alignLeft="@+id/email_text_view"
        android:layout_alignStart="@+id/email_text_view"/>

    <ImageButton
        android:id="@+id/profileImageButton"
        android:layout_marginTop="13dp"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>